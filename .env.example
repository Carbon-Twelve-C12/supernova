# Supernova Environment Variables
# Copy this file to .env and configure with your values
# Generate secure passwords: openssl rand -base64 32

# =============================================================================
# RPC Authentication (REQUIRED)
# =============================================================================
# These credentials are used for JSON-RPC API authentication
SUPERNOVA_RPC_USERNAME=supernova_admin
SUPERNOVA_RPC_PASSWORD=your-secure-rpc-password-here

# =============================================================================
# Monitoring & Dashboards
# =============================================================================
# Grafana admin password for monitoring dashboards
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password-here

# Prometheus configuration (optional)
PROMETHEUS_RETENTION_DAYS=30

# =============================================================================
# Node Configuration
# =============================================================================
# Network to connect to: mainnet, testnet, or regtest
SUPERNOVA_NETWORK=testnet

# Data directory path (inside container or host)
SUPERNOVA_DATA_DIR=/home/supernova/data

# Logging level: trace, debug, info, warn, error
SUPERNOVA_LOG_LEVEL=info

# =============================================================================
# Mining Configuration (Optional)
# =============================================================================
# Enable mining on this node
SUPERNOVA_MINING_ENABLED=false

# Mining threads (0 = auto-detect CPU cores)
SUPERNOVA_MINING_THREADS=0

# Address to receive mining rewards
SUPERNOVA_MINING_ADDRESS=

# =============================================================================
# Environmental/Green Mining (Optional)
# =============================================================================
# Renewable energy percentage (0.0 to 1.0)
SUPERNOVA_RENEWABLE_PERCENTAGE=0.0

# Energy efficiency score (0.0 to 1.0)
SUPERNOVA_EFFICIENCY_SCORE=0.5

# =============================================================================
# Quantum Security (Optional)
# =============================================================================
# Enable quantum-resistant signatures
SUPERNOVA_QUANTUM_ENABLED=true

# Algorithm: dilithium3, sphincs_sha256_256f
SUPERNOVA_QUANTUM_ALGORITHM=dilithium3

# =============================================================================
# Kubernetes/Helm Deployment (Optional)
# =============================================================================
# If deploying to Kubernetes, use Kubernetes Secrets instead:
# kubectl create secret generic supernova-rpc-auth \
#   --from-literal=username=YOUR_USERNAME \
#   --from-literal=password=YOUR_SECURE_PASSWORD
#
# kubectl create secret generic grafana-admin \
#   --from-literal=password=YOUR_GRAFANA_PASSWORD

# =============================================================================
# Alert Configuration (Optional)
# =============================================================================
# Email alerts
ALERT_EMAIL_TO=ops@example.com
ALERT_SMTP_HOST=smtp.example.com
ALERT_SMTP_PORT=587

# Slack alerts
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty alerts
ALERT_PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
